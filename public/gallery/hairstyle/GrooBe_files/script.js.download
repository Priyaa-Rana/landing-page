async function submitBYSNForm1(event){event.preventDefault();const form=document.getElementById('BYSNForm1');const formData=new FormData(form);let arr=[...formData];let service_arr=arr.slice(7,-1);let services=service_arr.map((val)=>val[1]);let msg_arr=arr.slice(-1)
let msg=msg_arr[0][1];let hours=Number(arr[4][1]);let minutes=Number(arr[5][1]);let AMPM=arr[6][1];if(AMPM=="PM"&&hours<12)hours=hours+12;if(AMPM=="AM"&&hours==12)hours=hours-12;var sHours=hours.toString();var sMinutes=minutes.toString();if(hours<10)sHours="0"+sHours;if(minutes<10)sMinutes="0"+sMinutes;let time=`${sHours}:${sMinutes}`;let booking={name:arr[0][1],phone:arr[1][1],gender:arr[2][1],date:arr[3][1],time,service:services.join(' '),message:msg}
let options={method:"POST",headers:{"Content-type":"application/json"},body:JSON.stringify(booking),}
let p=await fetch('https://groobe-landing.onrender.com/form-data',options)
let response=await p.json()
if(response.staus){document.getElementById("BYSNForm1").reset();$('#bysn-form1-services').selectpicker('val',[])}else{showToast(response.message)}}
